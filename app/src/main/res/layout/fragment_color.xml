<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ct_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/cd_color"
        app:cardElevation="6dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="16dp"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/ct_details"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/iv_color"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/waterlogo"
                android:id="@+id/iv_waterlogo_color"
                app:layout_constraintStart_toStartOf="@id/iv_color"
                app:layout_constraintEnd_toEndOf="@id/iv_color"
                app:layout_constraintTop_toTopOf="@id/iv_color"
                app:layout_constraintBottom_toBottomOf="@id/iv_color"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/ct_details"
                app:layout_constraintHeight_percent="0.15"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_bgcentercolor"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@id/tv_placedatacolor"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black"
                    android:text="NAME:ARCHI builders"
                    android:textAllCaps="true"
                    android:id="@+id/tv_namedatacolor"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_celldatacolor"
                    app:layout_constraintEnd_toStartOf="@id/tv_bgcentercolor"
                    app:layout_constraintTop_toBottomOf="@id/tv_namedatacolor"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black"
                    android:text="PLACE : AYYAMPETTAI"
                    android:textAllCaps="true"
                    android:id="@+id/tv_placedatacolor"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_bgcentercolor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_placedatacolor"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/black"
                    android:text="CELL:983475923"
                    android:textAllCaps="true"
                    android:id="@+id/tv_celldatacolor"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_bgcentercolor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:textSize="12sp"
                    android:text="Contact for : 2D plan 3d elevation,
struct"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:id="@+id/tv_contactdatacolor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:id="@+id/tv_bgcolor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_bgcentercolor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/black"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Coming Soon"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tv_color_comingsoon"/>
</androidx.constraintlayout.widget.ConstraintLayout>