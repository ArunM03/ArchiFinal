<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context="com.codezcook.SplashScreenActivity">


    <TextView
        android:id="@+id/tv_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ARCHIPLANNER"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plans"
        android:textSize="22sp"
        android:id="@+id/tv_v1"
        android:layout_marginLeft="15dp"

    app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_1line"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_appname"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textSize="22sp"
        android:id="@+id/tv_1line"
        app:layout_constraintStart_toEndOf="@id/tv_v1"
        app:layout_constraintEnd_toStartOf="@id/tv_2"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_appname"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elevations"
        android:textSize="22sp"
        android:id="@+id/tv_2"
        app:layout_constraintStart_toEndOf="@id/tv_1line"
        app:layout_constraintEnd_toStartOf="@id/tv_2line"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_appname"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textSize="22sp"
        android:id="@+id/tv_2line"
        app:layout_constraintStart_toEndOf="@id/tv_2"
        app:layout_constraintEnd_toStartOf="@id/tv_v3"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_appname"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QA"
        android:textSize="22sp"
        android:id="@+id/tv_v3"
        app:layout_constraintStart_toEndOf="@id/tv_2line"
        app:layout_constraintEnd_toStartOf="@id/tv_3line"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_appname"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textSize="22sp"
        android:id="@+id/tv_3line"
        app:layout_constraintStart_toEndOf="@id/tv_v3"
        app:layout_constraintEnd_toStartOf="@id/tv_4"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_appname"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quotation"
        android:textSize="22sp"
        android:id="@+id/tv_4"
        app:layout_constraintStart_toEndOf="@id/tv_3line"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_appname"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="MADE IN INDIA"/>
</androidx.constraintlayout.widget.ConstraintLayout>